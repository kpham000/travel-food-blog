<div id="title-background">
  <div id="title">
    <h1>New Post</h1>
  </div>
</div>

<form id="newpost-form">
  <div class="card">
    <div class="card-divider">
      New Post
    </div>
    <div class="card-section">
      <input type="text" name="title" id="post-title" placeholder="Post Title">
      <textarea type="body" name="body" id="post-body" placeholder="Content"></textarea>
      <button class="submit success button">Post</button>
      </div>
      {{!-- cloudinary --}}

      {{!-- textbox if text is selected --}}
        <textarea class="uk-textarea uk-form-blank" rows="15" cols="15"
            placeholder="POST those thoughts here..." id='postitTextarea'></textarea>

        {{!-- upload widget if image is selected --}}
        <div style='visibility:hidden' id='postitImageUpload' class='uk-flex uk-flex-center uk-flex-middle'>
            <button id="upload_widget" class="cloudinary-button uk-button uk-button-primary">Upload files</button>
        </div>

        {{!-- div for uploaded image and button to remove that image --}}
        <div style='visibility:hidden' id='image-div'>
            <div id='postitImage'>
                <img id='display-img' src="" alt="user-image" style='max-width:380px; max-height:290px;' class='uk-align-center'>
            </div>
            <br>

            <span uk-icon='icon: close' class='uk-position-bottom-right' id='remove-image'></span>
        </div>
      {{!-- couldinary --}}
    </div>
  </div>
</form>

