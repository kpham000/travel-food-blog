<div id="title-background">
  <div id="title">
    <h1>Potluck</h1>
  </div>
</div>
<h2 class="welcome"> {{username}} What would you like to post today?</h2>
{{#each blogs}}
  <div class="card">
    <div class="card-divider">
      <div class="card-title">
      <a href="/api/blogs/{{id}}">{{title}}</a>
      </div>
      <div class="created">
        Created by: {{User.username}} on {{short createdAt}}
      </div>
    </div>
    <div class="card-section">
      {{body}}
    </div>
  </div>
{{/each}}